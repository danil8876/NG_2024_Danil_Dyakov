#include <iostream>

using namespace std;

int main()
{
    double num1,num2;
    char operation;
    cout << "Vedit 1 number: ";
    cin >> num1;

    cout << "Vedit znak(+,-,/,*)";
    cin >>operation;

    cout << "Vedit 2 number: ";
    cin >>num2;

    switch (operation){
    case '+':
        cout << "Resultat:" << num1 + num2 << endl;
        break;

    case '-':
        cout << "Resultat:" << num1 - num2 <<endl;
        break;
    case '/':
        if (num2 != 0) {
            cout << "Resultat:" <<num1 / num2 <<endl;
        } else {
            cout << "Oshubka / na 0" << endl;
        }
        break;
    default:
        cout << "Oshubka" << endl;
        break;
    case '*':
        cout << "Resultat:" << num1 * num2 <<endl;

    }
    return 0;
}

